<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/imageBackgroundCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height500"
            android:layout_margin="@dimen/margin5dp"
            app:cardBackgroundColor="@color/purple_200"
            app:cardCornerRadius="@dimen/radius25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="@dimen/width50dp"
                    android:layout_height="@dimen/width50dp"
                    android:layout_margin="@dimen/margin10dp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/back" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height410dp"
                    android:layout_margin="@dimen/margin10dp"
                    app:cardBackgroundColor="@color/purple_200"
                    app:cardCornerRadius="@dimen/margin10dp"
                    app:cardElevation="@dimen/margin10dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10dp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize22sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin10dp"
            android:layout_marginTop="@dimen/minusMargin10"
            android:layout_marginEnd="@dimen/margin10dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="end"
            android:textColor="@color/grey"
            android:textSize="@dimen/textSize15sp"
            android:visibility="visible" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/descText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin10dp"
            android:layout_marginEnd="@dimen/margin10dp"
            android:fontFamily="sans-serif-medium"
            android:justificationMode="inter_word"
            android:textColor="@color/grey"
            android:textSize="@dimen/textSize16sp"
            tools:targetApi="o" />

    </LinearLayout>
</ScrollView>