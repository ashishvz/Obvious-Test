<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="statusBarStyleForLightBackground" parent="Theme.Obvious">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="statusBarStyleForDarkBackground" parent="Theme.Obvious">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="statusBarStyleForSplashScreen" parent="Theme.Obvious">
        <item name="android:statusBarColor">@color/statusPurple</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

</resources>