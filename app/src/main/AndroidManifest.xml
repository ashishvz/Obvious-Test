<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.obvious">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/astronaut_helmet_128px"
        android:label="@string/app_name"
        android:roundIcon="@drawable/astronaut_helmet_128px"
        android:supportsRtl="true"
        android:theme="@style/Theme.Obvious">
        <activity
            android:name=".SplasScreen"
            android:exported="true"
            android:theme="@style/statusBarStyleForLightBackground">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".activity.ImageDetailActivity"
            android:exported="true"
            android:theme="@style/statusBarStyleForLightBackground" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:theme="@style/statusBarStyleForLightBackground">

        </activity>
    </application>

</manifest>